<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
    
   <mapper namespace="com.iu.s1.board.notice.NoticeMapper">
   		<select id="getList" resultType="NoticeVO" parameterType="Pager">
			select * from notice
			<where>
				<choose>
					<when test="kind=='Writer'">
						writer like concat('%', #{search}, '%')
					</when>
					
					<when test="kind=='contents'">
						contents like concat('%', #{search}, '%')
					</when>
					
					<otherwise>
						title like concat('%', #{search}, '%')
					</otherwise>
				</choose>
			</where>
			order by num desc
			limit #{startRow}, #{perPage}
			<!-- limit 시작index번호(0부터시작), 갯수 --> 
   		</select>
   		
   		<select id="getTotalCount" parameterType="Pager" resultType="java.lang.Long">
   			select count(num) from notice
   		</select>
   		
   		<select id="getSelect" resultType="NoticeVO" parameterType="BoardVO">
   			select * from notice where num=#{num}
   		</select>
   		
   		<insert id="setInsert" parameterType="BoardVO">
   			insert into notice values(#{num}, #{title}, #{writer},#{contents}, now(), 0)
   		</insert>
   
   </mapper>
    